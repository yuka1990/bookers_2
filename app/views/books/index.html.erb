<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
   <%= image_tag book.user.get_profile_image(100,100)%>
   <% end %>
   
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
   <%= book.title %>
  <% end %>
  
  <p>Opinion</p>
  <%= book.body %>
</div>
<% end %>


<h1>New Book </h1>
<%= form_with model:@book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit "Create Book" %>
<% end %>