<%= render 'common', book: @book %>


<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
   <%= image_tag book.user.get_profile_image(100,100)%>
   <% end %>
   

  <%= link_to book_path(book.id) do %>
   <%= book.title %>
  <% end %>
  
 
  <%= book.body %>
</div>
<% end %>
