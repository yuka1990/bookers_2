<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="title">Title</label>
  <%= f.text_field :title, autofocus: true, id:"title"%>
  <label for="body">Introduction</label>
  <%= f.text_field :body, autofocus: true, id:"body"%>
  
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "show",book_path(@book.id)%>
<%= link_to "Back",books_path%>
