<div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  
  <div vlass="mb-3">
  <%= f.label :title %><br />
  <%= f.text_field :title, autofocus: true, id:"title"%>
  </div>
  
  <div vlass="mb-3">
  <%= f.label :body %><br />
  <%= f.text_field :body, autofocus: true, id:"body"%>
  </div>
  
  <div class="mb-3">
  <%= f.submit "Update Book",class:"btn btn-success mt-3" %>
  </div>
<% end %>

<%= link_to "show",book_path(@book.id)%>|
<%= link_to "Back",books_path%>

</div>
</div>
