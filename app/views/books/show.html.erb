<div class="container">
 <div class="row">
  <div class="col-md-3">
    
    <h1>User info</h1>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
       <tr>
         <th>name</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
      </tbody>
    </table>
       
    <div class="row">
    <%=link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i><% end %>
    </div>  
       
    <h1>New book </h1>
    <%= form_with model:@book_new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_field :body %>
      <%= f.submit "Create Book", class:"btn btn-success mt-3" %>
    <% end %>
    
  </div>

   <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table table-hover">
      <tbody>
        <tr>
          <td>
            <%=link_to user_path(@user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %></br>
              <%= @book.user.name %>
            <%end%>
          </td>
          <td>
              <%=link_to book_path(@book.id) do %>
               <%= @book.title %>
              <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Edit",edit_book_path(@book.id), class:"btn btn-success"%></td>
          <td> <%= link_to "Destroy",book_path(@book.id), method: :delete , data: { confirm: '本当に削除しますか？' },class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
 </div>
</div>
