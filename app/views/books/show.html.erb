<h1>Book detail</h1>
<div>
  <%=link_to user_path do %>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  
  <%end%>
  <%=link_to book_path(@book.id) do %>
   <%= @book.title %>
  <% end %>
  <%= @book.body %>
  <% if @book.user == current_user %>
   <%= link_to "Edit",book_path(@book.id)%>
   <%= link_to "Destroy",books_path(@book), method: :delete %>
   <% end %>
</div>