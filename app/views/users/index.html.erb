<h1>Users</h1>
<% @users.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
   <%= image_tag book.user.get_profile_image(100,100)%>
   <% end %>
   
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
   <%= book.title %>
  <% end %>
  
  <p>Opinion</p>
  <%= book.body %>
</div>
<% end %>