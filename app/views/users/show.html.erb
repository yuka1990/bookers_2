<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
    <p>name <%= @user.name %></P>
    <p>introduction <%= @user.introduction %></P>
    <p><%=link_to"プロフィール編集",edit_user_path(current_user) %></p>


<h1>New Book </h1>


<%= form_with model:@book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>
<h2>Title</h2>
<h2>Opinion</h2>

<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
   <%= image_tag book.user.get_profile_image(100,100)%>
   <% end %>

  <%= link_to book_path(book.id) do %>
   <%= book.title %>
   <% end %>

  <%= book.body %>

</div>
<% end %>
