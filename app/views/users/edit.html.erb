<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
      <% if @user.errors.any? %>
      <%= @user.errors.count %>error prohibited this obj from being saved:
     <ul>
       <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
      <% end %>
      
    <%= form_with model: @user do |f| %>
    <div class="form-group">
     <%= f.label :name %><br />
     <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div class="form-group">
     <%= f.label :image %><br />
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div class="form-group">
     <%= f.label :introduction %></br>
     <%= f.text_field :introduction, autofocus: true, id:"inputintroduction", placeholder:"紹介"%>
    </div>
    <div class="form-group">
     <%= f.submit "Update User",class:"btn btn-secondary" %>
    </div>
    <% end %>
   </div>
  </div>
</div>